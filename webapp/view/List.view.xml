<mvc:View
    controllerName="zsd041salesorders.controller.List"
    xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc">

    <semantic:SemanticPage
        id="listPage"
        preserveHeaderStateOnScroll="true"
        toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title
                id="listPageTitle"
                text="{listView>/title}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>
            <!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
            <List
                id="list"
                width="auto"
                class="sapFDynamicPageAlignContent"
                items="{
                    path: '/ZSD_041_C_SALES_ORDERS',
                    sorter: {
                        path: 'SalesDocument',
                        descending: false
                    },
                    groupHeaderFactory: '.createGroupHeader'
                }"
                busyIndicatorDelay="{listView>/delay}"
                noDataText="{listView>/noDataText}"
                mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                selectionChange=".onSelectionChange">

                <headerToolbar>
                    <OverflowToolbar id="idInfoToolbar">
                        <Label text="Status:" labelFor="idComboBox"/>
                        <ComboBox
											id="idComboBox"
                                            showSecondaryValues= "true"
                                            showClearIcon="true"
											selectionChange=".onFilter"
										>
											<!-- <core:Item key="{OverallStatus}" text="{OverallStatus}"/> -->
                                            <core:ListItem key="A" text="Not yet processed" additionalText = "A"/>
                                            <core:ListItem key="B" text="Partially processed" additionalText = "B"/>
                                            <core:ListItem key="C" text="Completely processed" additionalText = "C"/>
										</ComboBox>
                        <ToolbarSpacer />
                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem
                        type="Navigation"
                        press=".onSelectionChange"
                        title="{MatNr}"
                        intro="{OverallStatus}">
                         <ObjectAttribute text="{ItemDescription}" />
                        </ObjectListItem>
                </items>
            </List>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>